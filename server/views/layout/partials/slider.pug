section
    .container-fluid.m-0.p-0.oscuro
        .row.m-0.p-lg-0.pb-4.pb-md-0
            .col-md-4.m-0.p-0
                .carousel(data-ride="carousel")#carouselExampleSlidesOnly
                    .carousel-inner
                        .carousel-item.fadeSlider
                                img.d-block.img-fluid(src='/img/palacio_slider.jpg' alt=`Deifontes turismo, imágenes`)
                        if imgs
                            each img in imgs
                                .carousel-item.fadeSlider
                                    picture
                                        source(srcset=`/img/slider/${img}.webp`, type="image/webp")
                                        img.d-block.img-fluid(src=`/img/slider/${img}.jpg` alt=`Deifontes turismo, imágenes`)
            .col-md-8.my-md-auto
                h1.text-white.slider-text= pagina
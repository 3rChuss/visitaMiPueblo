.container.mt-5
    .row
        .col
            form(action="/editarUsuario", method="post")
                table.table.table-hover.table-striped
                    thead.thead-dark
                        tr
                            th(scope="col") ID 🔒
                            th(scope="col") Nombre 🌞
                            th(scope="col") Email 📪
                            th(scope="col") Contraseña 🔑
                            th(scope="col") Role 🛠
                            th(scope="col") Acción ⚙️
                    tbody
                        each user in usuarios
                            tr(id=`user-${user.id}`)
                                td(scope="row")=user.id
                                td
                                    input(type="text" name="nombre" disabled="disabled" value=user.nombre)
                                td
                                    input(type="email" name="email" disabled="disabled" value=user.email)
                                td.d-flex
                                    input#passwdInput(type="password" name="passwd" disabled="disabled" value=user.passwd.substr(0,10) aria-describedby="basic-addon1")
                                    span#verPasswrd(title="Mostrar contraseña") 👁
                                td
                                    select#role(name="role" required disabled="disabled")
                                        option(value="" disabled selected)=user.role
                                        option(value="writer") Escritor
                                        option(value="admin") Administrador
                                td#botonera #[span#editar-user(title="Editar Usuario") ✏️] #[span#eliminar-user(title="Eliminar Usuario" style="display:none") 🚽] #[button#aceptar-user.btn-outline-success(type="Submit" style="display:none" title="Aceptar") ✔️] #[span#cancelar-edit(title="Cancelar Cambios" style="display:none") ❌]
    .row.align-items-center
        .col-1
            button#btn-form-habilitar.btn.btn-outline-primary ➕
        .col-11
            form(action="/registrar" method="post")
                fieldset#form-registrar(disabled="disabled")
                    table.table.table-hover
                        tbody
                            tr
                                td
                                    input.form-control(type="text" required name="nombre" placeholder="Nombre")
                                td
                                    input.form-control(type="email" required name="email")
                                td
                                    input.form-control(type="password" required name="passwd")
                                td
                                    select#role.form-control(name="role" required)
                                        option(value="" disabled selected) Elige un role
                                        option(value="writer") Escritor
                                        option(value="admin") Administrador
                                td #[button.btn.btn-outline-success(type="Submit") ✔️]

    script(src="/js/admin.js")